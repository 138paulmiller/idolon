from idolon import *

sheet("demo/demo")
s0 = sprite(0,0,0)
dt = 0

class App:
  def __init__(self):
    pass    

  def __update__(self):
    pos(s0, mx(), my())

  def __onkey__(self, k, s):
    if s == CLICK:
      if k == DOWN:
        flip(s0,-1)
      elif k == UP:
        flip(s0, 1)

app = App()

def onkey(key, state):
  app.__onkey__(key, state)

def update():
  app.__update__()